    <Button
        android:id="@+id/open_map_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_et"
        android:layout_marginTop="30dp"
        android:height="60dp"
        android:background="@color/purple"
